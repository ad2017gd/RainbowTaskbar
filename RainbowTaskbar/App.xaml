<Application x:Class="RainbowTaskbar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ui="http://schemas.modernwpf.com/2019"
             
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             StartupUri="TrayWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources>
                    <ui:ThemeResources.ThemeDictionaries>
                        <ResourceDictionary x:Key="Dark">

                            <ResourceDictionary.MergedDictionaries>
                                <ui:ColorPaletteResources
                    TargetTheme="Dark"
                    AltHigh="#222222" />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ui:ThemeResources.ThemeDictionaries>
                </ui:ThemeResources>
                <ui:IntellisenseResources />
                <ui:XamlControlsResources />
                <ui:ResourceDictionaryEx />



                <ResourceDictionary Source="/ModernWpf;component/Styles/Window.xaml" />
            </ResourceDictionary.MergedDictionaries>


        </ResourceDictionary>

    </Application.Resources>

</Application>